<Window x:Class="KinectHeightTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="MainWindow_Loaded" Closing="MainWindow_Closing"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="1" HorizontalAlignment="Center">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill"></Image>
        </Viewbox>
        <TextBlock Name="tblkHeight" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="18" ></TextBlock>
    </Grid>
</Window>
